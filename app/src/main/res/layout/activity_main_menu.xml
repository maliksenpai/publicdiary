<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.dairy.publicdairy.View.Activities.MainMenu">

	<ImageButton
		android:layout_width="230dp"
		android:layout_height="160dp" app:srcCompat="@drawable/icons8handwithpen100"
		android:layout_alignParentStart="true" android:layout_marginStart="65dp" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:id="@+id/mainbutton1" android:layout_marginTop="77dp"
		android:layout_marginLeft="65dp"
		android:background="@color/primary"/>
	<ImageButton
		android:layout_width="230dp"
		android:layout_height="160dp" app:srcCompat="@drawable/icons8openbook100"
		android:layout_alignParentStart="true" android:layout_marginStart="65dp" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:id="@+id/mainbutton2" android:layout_marginTop="261dp"
		android:layout_marginLeft="65dp"
		android:background="@color/primary"/>
	<TextView
		android:text="@string/maintext1"
		android:layout_width="230dp"
		android:layout_height="36dp"
		android:id="@+id/maintext1"
		android:layout_marginLeft="65dp"
		android:layout_marginTop="114dp"
		android:gravity="center"
		android:textColor="@color/white"
		android:layout_alignTop="@+id/mainbutton1"/>
	<TextView
		android:text="@string/maintext2"
		android:layout_width="230dp"
		android:layout_height="36dp"
		android:id="@+id/maintext2"
		android:layout_marginLeft="65dp"
		android:layout_marginTop="120dp"
		android:gravity="center"
		android:textColor="@color/white"
		android:layout_alignTop="@+id/mainbutton2"/>
</RelativeLayout>
