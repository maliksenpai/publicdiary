        android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_marginTop="68dp"
        android:layout_marginLeft="88dp"/>
    <TextView
        android:layout_width="285dp"
        android:layout_height="57dp" android:layout_alignParentStart="true"
