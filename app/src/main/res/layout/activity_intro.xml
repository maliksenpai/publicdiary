        android:layout_alignParentTop="true" android:id="@+id/introText" android:layout_marginTop="340dp"
        android:layout_marginLeft="51dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/intro1"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_media_play"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:layout_marginEnd="27dp"
        android:layout_alignParentBottom="true" android:id="@+id/introButton" android:layout_marginBottom="74dp"
        android:layout_marginRight="27dp"
        android:background="@null"/>
